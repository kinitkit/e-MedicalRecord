<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kinit.e_medicalrecord">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Request.Custom_Singleton"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.Login" />
        <activity android:name=".Activities.Register_MedicalStaff" />
        <activity android:name=".Activities.Profile" />
        <activity android:name=".Activities.Family_History" />
        <activity android:name=".Activities.Medical_Result_Prescription_Laboratory_Medical" />
        <activity android:name=".Activities.Past_Medical_History" />
        <activity android:name=".Activities.Social_History" />
        <activity android:name=".Activities.Surgical_History" />
        <activity android:name=".Activities.Edit_FamilyHistory" />
        <activity android:name=".Activities.Edit_Social_History" />
        <activity android:name=".Activities.Edit_Past_Medical_History" />
        <activity android:name=".Activities.Base_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.search"
                android:resource="@xml/search" />
        </activity>
        <activity android:name=".Activities.Edit_Surgical_History" />
        <activity android:name=".Activities.Medical"></activity>
    </application>

</manifest>
