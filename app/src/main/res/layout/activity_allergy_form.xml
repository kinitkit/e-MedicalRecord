<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.e_medicalRecord.kinit.e_medicalrecord.Allergy.Activity.Allergy_Form">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_with_backbtn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_textInputLayout_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="17sp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_allergicFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Allergic From"
                        android:inputType="textCapSentences"
                        android:maxLength="50"
                        android:paddingTop="@dimen/dp_3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="17sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_textInputLayout_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="17sp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_reaction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reaction"
                        android:inputType="textCapSentences"
                        android:maxLength="50"
                        android:paddingTop="@dimen/dp_3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="17sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="17sp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_treatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Treatment"
                        android:inputType="textCapSentences"
                        android:maxLength="50"
                        android:paddingTop="3dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/colorTextPrimary"
                        android:textColorHint="@color/colorTextPrimary"
                        android:textSize="@dimen/sp_17" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="12dp"
            android:text="@string/save"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>
