<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lab__hematology__form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.kinit.e_medicalrecord.Activities.Laboratory.Lab_Hematology_Form">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_with_backbtn" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical">

            <include layout="@layout/view_laboratory" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Laboratory Test"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimaryDark" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_hemoglobin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hemoglobin"
                            android:inputType="number"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_hematocrit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hematocrit"
                            android:inputType="number"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_rbc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="RBC"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_wbc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="WBC"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_platelet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Platelets"
                            android:inputType="number"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_reticulocytes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Reticulocytes"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_mcv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="MCV"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_mch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="MCH"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_mchc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="MCHC"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_esr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ESR (Sedimentation Rate)"
                            android:inputType="number"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_segmenter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Segmenters"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_stab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Stab"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_lymphocyte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Lymphocytes"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_monocyte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Monocytes"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_eosinophils"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Eosinophils"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_basophils"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Basophils"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_malarialSmear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Malarial Smear"
                            android:inputType="text"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_bleedingTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Bleeding Time"
                            android:inputType="number"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_clottingTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Clotting Time"
                            android:inputType="number"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Blood Type"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="17sp" />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spinner_bloodType"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:padding="0dp"
                            android:spinnerMode="dropdown"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_rh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Rh"
                            android:inputType="text"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"                         android:textColorHint="@color/colorPrimaryDark"                         android:textSize="17sp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_remarks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Remarks"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:paddingTop="@dimen/dp_3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/sp_17" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:padding="12dp"
                android:text="@string/save"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#ffffff" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_goTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Go to:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorTextSecondary"
                android:textSize="17sp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_lab_search"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_goTo"
                android:padding="0dp"
                android:spinnerMode="dialog"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorTextSecondary"
                android:textSize="17sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>
