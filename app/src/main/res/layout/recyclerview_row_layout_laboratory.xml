<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#FFFFFF"
        android:clickable="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_medContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_medContent_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug, 2016"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/sp_17"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_medContent_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/sp_20"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_medContent_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:00 PM"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/sp_17"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_5"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/linear_medContent"
            android:layout_toEndOf="@+id/linear_medContent">

            <TextView
                android:id="@+id/tv_medContent_lab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VitaLab"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/sp_20"
                android:lines="1"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/tv_medContent_medTech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Name, MT"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/sp_17"
                android:layout_marginTop="7dp"
                android:layout_gravity="left"/>
        </LinearLayout>

    </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>