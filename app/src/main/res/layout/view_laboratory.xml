<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Laboratory"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimaryDark" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="17sp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_physicianName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Requesting Physician"
                    android:inputType="textCapSentences"
                    android:paddingTop="@dimen/dp_3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="17sp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_pathologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pathologist"
                    android:inputType="textCapSentences"
                    android:paddingTop="@dimen/dp_3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="17sp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_medTech"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Medical Technologist"
                    android:inputType="textCapSentences"
                    android:paddingTop="@dimen/dp_3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="17sp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_laboratory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Laboratory"
                    android:inputType="textCapSentences"
                    android:paddingTop="@dimen/dp_3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="17sp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Date Performed"
                    android:inputType="text"
                    android:paddingTop="@dimen/dp_3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>